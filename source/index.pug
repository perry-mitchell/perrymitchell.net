- var title = "Perry Mitchell"
doctype html
html(lang="en")
    head
        title Perry Mitchell
        link(href="https://fonts.googleapis.com/css?family=Noto+Serif|Open+Sans" rel="stylesheet")
        style(type="text/css").
            html, body {
                height: 100%;
                overflow: hidden;
                margin: 0;
            }
            #content {
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #EEE;
                font-family: "Open Sans", sans-serif;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
            .title {
                font-family: "Noto Serif", serif;
            }
            .info {
                max-width: 256px;
                text-align: center;
            }
    body
        #content
            h1.title #{title}
            p.info Australian Web, Mobile, Applications, and Systems developer living in Finland.
