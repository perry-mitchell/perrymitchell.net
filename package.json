  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perry-mitchell/perrymitchell.net/issues"
  },
  "homepage": "https://github.com/perry-mitchell/perrymitchell.net#readme",
  "private": true,
  "devDependencies": {
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2"
  }
}
